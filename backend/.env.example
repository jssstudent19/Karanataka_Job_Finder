# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/karnataka_job_portal
DB_NAME=karnataka_job_portal

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# AI Service Configuration (OpenAI or other)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
UPLOAD_PATH=./uploads

# Job Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=24
MAX_JOBS_PER_SCRAPE=100

# LinkedIn Scraping (Optional - use with caution)
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password

# Indeed Scraping
INDEED_BASE_URL=https://indeed.com
INDEED_SEARCH_QUERY=software+developer

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log